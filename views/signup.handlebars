<!--New User Sign Up-->
<div class="container">

    <div class="row mt-5">
        <div class="card px-0 shadow">
            <h5 class="card-header bg-dark text-white">New User Sign Up</h5>
            <div class="card-body">
                <form>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name">
                        </div>
                    </div>
                     <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Birthday</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="birthday">
                            <div id="birthdayHelp" class="form-text">
                                 Please enter your date in format 'MM/DD/YYYY' with no spaces
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3"> 
                        <label for="roleList" class="form-label col-sm-2">Select Role</label>
                        <div class="col-sm-10">
                             <select id="role" class="form-select">
                                <option>Parent</option>
                                <option>Child</option>
                            </select>
                            <div id="roleHelp" class="form-text">
                                "Parent" is selcted as default. If your are a child, please select child. 
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="password">
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" id="sign-up-button" class="btn btn-info">Sign Up!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Signup Instruction-->
    <div class="row text-center fs-5 mt-5">
        <p> Please enter the requested information, then select "signup" when ready!</p>
    </div>

  
</div>

<!--Script for signup-->
<script src="/js/signup.js"></script>