<!--New User Sign Up-->
<div class="container">

    <div class="row mt-5">
        <div class="card px-0 shadow">
            <h5 class="card-header bg-dark text-white">New User Sign Up</h5>
            <div class="card-body">
                <form>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="inputNewEmail">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputNewUserName">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="inputNewPassword">
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" id="sign-up-button" class="btn btn-info">Sign Up!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Signup Instruction-->
    <div class="row text-center fs-5 mt-5">
        <p> Enter your email, username and password to sign up!</p>
    </div>

  
</div>

<!--Script for signup-->
<script src="/js/signup.js"></script>